<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Model="using:Dojo.Model"
    xmlns:local="using:Dojo.Resources">

    <DataTemplate x:Key="IdeaTemplate">
        <Grid>
            <Image x:Name="imgMain"
                   Source="{Binding media.link }"/>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="CategoryTemplate">
        <Grid>
            <Image x:Name="imgMain"
                   Source="{Binding media.link }"/>
            <Rectangle HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"
                       Fill="Black"
                       Opacity=".2"
                       StrokeThickness="0"
                       Width="Auto"
                       Height="Auto"/>
            <TextBlock x:Name="lblName"
                       Text="{Binding name}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontWeight="Black"
                       FontSize="36"/>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="CollectionTemplate">
        <Grid>
            <Image x:Name="imgMain"
                   Source="{Binding media.link }" />
        </Grid>
    </DataTemplate>

</ResourceDictionary>
